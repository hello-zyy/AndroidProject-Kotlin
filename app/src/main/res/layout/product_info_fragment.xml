<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_fafafa">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_secondary_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="2.5dp"
        android:paddingEnd="2.5dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_proudct"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="2.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_secondary_layout" />

    <RelativeLayout
        android:id="@+id/rl_big_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_big_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/launcher_ic" />

        <TextView
            android:id="@+id/tv_big_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_big_icon"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:tag="@string/gotham_bold"
            android:text="name"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_big_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_big_name"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:tag="@string/gotham_bold"
            android:text="name"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_big_member_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_big_price"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:tag="@string/gotham_bold"
            android:text="name"
            android:textColor="@color/red"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_no_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_no_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:tag="@string/gotham_bold"
            android:text="@string/no_have_product"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_add_product"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/user_round_btn_purple"
            android:gravity="center"
            android:tag="@string/gotham_bold"
            android:text="@string/add_product_info"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>